<Window x:Class="VerkoGlazkiSave.ChangePriorityWndw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerkoGlazkiSave"
        mc:Ignorable="d"
        Title="ChangePriorityWndw" Height="180" Width="300" FontFamily="Century Gothic">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Введите новый приоритет для выделенных агентов:" Grid.Row="0" FontSize="14" HorizontalAlignment="Left" TextWrapping="Wrap"  Margin="3"></TextBlock>
        <TextBox Name="TBPriority" Grid.Row="1" HorizontalAlignment="Center" FontSize="15" Width="250" Margin="5"></TextBox>
        <TextBlock Text="(Для отмены изменений оставьте это поле пустым)" Grid.Row="2" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Top"></TextBlock>
        <Button Content="Сохранить" Name="SavePriorityBtn" Grid.Row="4" HorizontalAlignment="Center" Margin="10" Click="SavePriorityBtn_Click"></Button>
    </Grid>
</Window>
